<% const {_id, title, artist, url}=song %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column is-6" id="source" style="display:block;margin:auto;">
                    <div class="card p-4">
                        <div class="card-image py-5 px-4 mx-1">
                            <figure class="image is-5by4">
                                <image src="<%= song.img_url %>"></image>
                            </figure>
                        </div>

                        <div class="card-content">
                            <div class="content">
                                <p class="title has-text-centered is-size-3-dekstop is-size-5-tablet">
                                    <%= title %>
                                </p>
                                <p class="subtitle has-text-centered is-size-6-desktop">
                                    <%= artist %>
                                </p>
                            </div>
                        </div>
                        <div class="card-footer py-1" style="display:block;margin:auto;">


                            <div class="progress-container" id=<%=`button3_${song._id}` %> style="
                                margin:1em 1em 0.5em 1em;
                                height: fit-content;
                                border-width:0.4px;
                                border-color:#111111;
                                border-style:solid;
                                border-radius:10px;
                                padding: 0;
                                ">
                                <div id=<%=`button4_${song._id}` %> class="progress" style=
                                    "height: 0.7rem;
                                    border-radius:10px;
                                    width:0%;
                                    padding:0;">
                                </div>
                            </div>
                            <audio id="audio" src="<%= song.url %>" type="audio/mpeg" style="display: none;" class="<%= song._id %>">
                            </audio>
                            <center>
                                <button class="button is-black is-medium is-outlined" onclick="pick2('<%= song._id %>')"
                                    id=<%=`button2_${song._id}` %>
                                    style="
                                    width:30%; height:fit-content;font-family:
                                    'Quicksand';margin:
                                    0.5em;padding:0.5em;">
                                    Play
                                </button>
                                <br>
                                <button class="column is-2 button is-dark is-medium is-outlined"
                                    onclick="playlist('<%= song._id %>')" id=<%=`button1_${song._id}` %> style="
                                    margin:
                                    0.5em; width:60%;height:fit-content;font-family:
                                    'Quicksand';padding:0.6em;"
                                    <% if(user_id=='guest' ) { %>
                                        <%- "disabled" %>
                                            <% } %>
                                                >
                                                Add to playlist
                                </button>
                            </center>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <style>
        @media(min-width: 1000px) {
            #source {
                width: 480px;
            }
        }

        @media(max-width: 1000px) {
            #source {
                width: 350px;
            }
        }

        figure {
            border-radius: 100%;
        }

        .card {
            background-color: #f1f1f1de;
            z-index: 100;
            box-shadow: 0 1px 3px rgba(27, 27, 27, 0.12), 0 1px 2px rgba(31, 31, 31, 0.24);
            transition: all 0.3s cubic-bezier(.25, .8, .25, 1);
            border: thin solid lightgray;
        }

        .card:hover {
            box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);

        }
    </style>