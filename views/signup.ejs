<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="/sign.css" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
</head>
<style>
    div {
        padding: 0.25em;
    }

    .container {
        padding-top: 20px;
        margin: auto;
    }

    div.col-md-6 label.form-check-label {
        font-size: 0.8em;
        font-weight: 500;
        padding: 0.1em;
    }

    body {
        background-image: url(https://static.vecteezy.com/system/resources/previews/000/566/196/original/abstract-geometric-square-white-background-light-and-shadow-vector.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        background-attachment: fixed;
        font-family: 'Quicksand';
    }

    footer {
        text-align: center;
        padding: 1em 0.5em;
    }

    footer>a {
        text-decoration: none;
        color: black;
        font-size: 1.1em;
    }

    footer>a:hover {
        color: black;
        text-decoration: underline;

    }

    .required {
        color: red;
    }

    #show {
        font-size: 1em;
    }
</style>

<body>

    <div class="container">
        <center>
            <h1 class="display-2">SignUp</h1>
        </center>
        <br>
        <br>
        <form action="/users" method="POST" onsubmit="return validate()">
            <div class="row g-3">
                <div class="col-md-8 mb-1">
                    <label for="Name" class="form-label">Name</label><span class="required">*</span>
                    <input type="text" name="name" class="form-control" id="Name" placeholder="Enter your Name"
                        required>
                </div>
                <div class="col-md-4">
                    <label for="username" class="form-label">Username</label><span class="required">*</span>
                    <input type="text" name="username" class="form-control" id="username"
                        placeholder="Create your username" reqired>
                </div>
            </div>

            <div class="row g-3">
                <div class="mb-3 col-md-6">
                    <label for="password1" class="form-label mb-2">Password</label><span class="required">*</span>
                    <input type="password" class="form-control mb-2" id="password1" placeholder="Don't make it too easy"
                        required name="password">
                    <input class="form-check-input" type="checkbox" onclick="showPass1()">
                    <label class="form-check-label" for="password1" id="show">Show password</label>
                </div>

                <div class="col-md-6">
                    <label for="password2" class="form-label mb-1">Confirm Password</label><span
                        class="required">*</span>
                    <input type="password" class="form-control mb-1" id="password2" placeholder="Re-type your password" required>
                    <input class="form-check-input" type="checkbox" onclick="showPass2()">
                    <label class="form-check-label" for="password2" id="show">Show password</label>
                </div>
            </div>

            <div class="alert alert-warning alert-dismissible fade show" role="alert" id="alert" style="display: none;">
                <strong>Password and Confirm Password do not match!</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%- include('partials/flash') %>
            <center>
                <button type="submit" class="btn btn-dark btn-lg mt-2" id="btnSubmit" value="Submit">
                    Register
                </button>
            </center>

        </form>
    </div>
    <footer>
        <a href="/users/login">Already have an account? Login instead</a>
    </footer>

    <script>

        function showPass1() {
            var x = document.getElementById("password1");
            if (x.type === "password") {
                x.type = "text";
            }
            else {
                x.type = "password";
            }
        }
        function showPass2() {
            var x = document.getElementById("password2");
            if (x.type === "password") {
                x.type = "text";
            }
            else {
                x.type = "password";
            }
        }

        function validate() {
            let password = document.getElementById("password1").value;
            let confirmPassword = document.getElementById("password2").value;
            if (password != confirmPassword) {
                event.preventDefault();
                document.getElementById('alert').style.display = "block";
                return false;
            }
            return true;
        }
    </script>
</body>

</html>