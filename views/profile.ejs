<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/selectorpage.css" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <script src="https://use.fontawesome.com/releases/v5.12.0/js/all.js"></script>
    <script src="https://unpkg.com/scrollreveal"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <title>Profile</title>
</head>

<body style="font-family: 'Quicksand';">
    <div class="box">
        <nav class="nav">
            <center class="nav-center">
                <a class="icon">
                    <i class="fab fa-itunes-note" id="icon"></i>
                </a>
            </center>
        </nav>
    </div>
    <center>
        <nav class="breadcrumb has-succeeds-separator">
            <ul style="align-items:center;justify-content:center">
                <li id="link"><a href="/">Home</a></li>
                <li id="link" class="is-active"><a href="/users">Profile</a></li>

            </ul>
        </nav>
        <br>
    </center>

    <div class="container">
        <div class="columns">
            <div class="column has-text-left">
                <div class="yourPlaylist">
                    <div class="title is-4 has-text-centered">
                        <% if (playlists.length===0) { %>
                            No playlists to display.
                            <% } else {%>
                                Choose your playlist
                                <% } %>

                                    <br>

                                    <% playlists.forEach(playlist=> { %>
                                        <div
                                            class="subtitle is-5 has-text-centered"
                                            style="margin:1em;cursor: pointer;"
                                            onclick="selectPlaylist('<%= playlist._id %>')"
                                        >
                                            <%= playlist.title %>
                                        </div>
                                        <% }) %>
                    </div>

                </div>
            </div>
            <div class="column is-4">
                <div class="otherOptions">
                    <a href="/search" style="text-decoration: none; color: black;">
                        <button class="button is-outlined is-medium is-primary" id="login" style="width: fit-content;
                margin: auto;
                display: block;
                font-family: 'Quicksand';">
                            Search for songs

                        </button>
                    </a>
                    <br>
                    <button class="button is-outlined is-medium is-danger" id="now" style="width: fit-content;
                margin: auto;
                display: block;
                font-family: 'Quicksand';" onclick="make()">
                        New playlist
                    </button>
                    <input type="text" class="input" style="display: none; margin: 1em;"
                        placeholder="Name your playlist.">
                    <center>
                        <small class="has-text-danger" style="display: none;">Please add a valid name</small>
                        <button class="button is-danger is-outlined is-centered" id="submit"
                            style="display:none;margin: 1em;" onclick="selectSongs()">Select Songs</button>
                    </center>
                </div>
            </div>

        </div>
    </div>


    <script>

        function selectPlaylist(_id) {
            const PLAYLIST_URL = `/users/<%= user_id %>/playlists/${_id}`;
            window.location.href = PLAYLIST_URL;
        }


        function make() {
            document.querySelector(".input").style.display = null;
            document.querySelector("#now").style.display = "none";
            document.getElementById("submit").style.display = null;
        }
        let input = document.querySelector(".input");

        ScrollReveal().reveal('#link', { delay: 200 });
        ScrollReveal().reveal('.yourPlaylist', { delay: 600 });
        ScrollReveal().reveal('#login', { delay: 1000 });
        ScrollReveal().reveal('#now', { delay: 1600 });
    </script>
</body>

</html>